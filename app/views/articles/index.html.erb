<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<div class="container m-5 px-5">
				<h1 class="mb-4 font-italic">Articles</h1>
				<hr>
				<% @articles.each do |a| %>
				<h2><%= link_to a.title, article_path(a) %></h2>
				<p><%= a.content%></p>
				<% end %>
			</div>
		</div>
	</div>
</div>