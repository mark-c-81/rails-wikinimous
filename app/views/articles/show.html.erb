<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<div class="container m-5 px-5">
				<h1><%= @article.title %></h1>
				<p><%= @article.content %></p>
				<hr>
				<div class="mt-3">
					<%= link_to "Delete", article_path(@article), :class => "btn btn-outline-secondary btn-large", method: :delete, data: { confirm: "Are you sure?" } %>
					<%= link_to "Edit", edit_article_path, :class => "btn btn-outline-secondary btn-large" %>
					<%= link_to "Back", articles_path, :class => "btn btn-outline-secondary btn-large" %>
				</div>
			</div>
		</div>
	</div>	
</div>